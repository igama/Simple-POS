

<h2><legend><%= @product.name %></legend></h2>

<div class="row">
      <div class="span3">
		<%= image_tag @product.image.url %>
	  </div>

      <div class="span3 well pull-right">
		<p><strong><%= @product.brand.name %></strong></p>
		<p><b>Category:</b> <%= @product.category %></p>
      </div>
</div>
<div class="row">
  <div class="span3">
	<hr>
    <p><b>Price:</b> <%= @product.price %></p>

    <div class="cart"><%= button_to 'Working', cart_items_path(:product_id => @product, :product_condition => "Working"), :remote => true, :class => "btn btn-small" %></div> <div class="cart"><%= button_to 'Broken', cart_items_path(:product_id => @product, :product_condition => "Broken"), :remote => true, :class => "btn btn-small" %></div>
  

  </div>


</div>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', brand_path(@product.brand) %>
