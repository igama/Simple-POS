<div class="">

	<h3>Latest Products</h3>

	<%= link_to 'New Product', new_product_path, :class => "btn btn-primary" %><br/>


	<div id="product_list">

	<table>
	  <tr>
	    <th>Image</th>
	    <th>Name</th>
	    <th>Price</th>
	    <th>Brand</th>
	    <th>Category</th>
	    <th></th>
	    <th></th>
	  </tr>

	<% @products.each do |product| %>
	  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
		<td><%= link_to(image_tag(product.image.url, :class => 'list_image'),product) %></td>    
		<td><%= product.name %></td>
	    <td><%= product.price %></td>
	    <td><%= product.brand_id %></td>
	    <td><%= product.category %></td>
	  </tr>
	<% end %>
	</table>

	<br />

	</div>


</div>
