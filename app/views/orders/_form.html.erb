<%= form_for(@order, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :customer do |c| %>  
    <div class="control-group">
      <div class="control-label">
        <%= c.label :name %>
      </div>
      <%= c.text_field :name, :size => 40, :class=> "input-xlarge" %>
    </div>
    <div class="control-group">
      <div class="control-label">
        <%= c.label :address %>
      </div>
      <%= c.text_area :address, :rows =>4, :cols => 40, :class=> "input-xlarge" %>
    </div>
      <div class="control-group">
      <div class="control-label">
        <%= c.label :postcode %>
      </div>
      <%= c.text_field :postcode, :size => 30, :class=> "input-large" %>
    </div> 

    <div class="control-group">
      <div class="control-label">
        <%= c.label :phone %>
      </div>
      <%= c.text_field :phone, :size => 15, :class=> "input-large" %>
    </div> 

    <div class="control-group">
      <div class="control-label">
        <%= c.label :email %>
      </div>
      <%= c.text_field :email, :size => 50, :class=> "input-xlarge" %>
    </div> 
  <% end %>


  <div class="control-group">
    <div class="control-label">
      <%= f.label :pay_type %> <%= f.select :pay_type, Order::PAYMENT_TYPES, :prompt => 'Select payment method' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'Place Order', :class=>"btn btn-success" %>
  </div>
<% end %>
