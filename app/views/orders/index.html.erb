<h1>Listing orders</h1>

<table>
  <tr>
	<th>Order ID</th>
    <th>Name</th>
    <th>Address</th>
    <th>Email</th>
    <th>Pay type</th>
    <th>Actions</th>
  </tr>

<% @orders.each do |order| %>
  <tr>
	<td><%= order.id %></td>
    <td><%= order.name %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= order.pay_type %></td>
    <td>
		<%= link_to 'Show', order %><br/>
    	<%= link_to 'Delete', order, confirm: 'Are you sure?', method: :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>
