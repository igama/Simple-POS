<div class="page-header">
	<%= image_tag(@brand.logo_url, :class => 'pull-right') %>
	<h1><%= @brand.name %></h1>
</div>

	<legend>List of equipments</legend>

	<div class="product-grid">
		<% @products.each do |product| %>	
		<div>
			<div class="name"><%= link_to truncate(product.name, :length => 30), product %></div>
			<div class="image"><%= link_to(image_tag(product.image.url(:thumb), :class => 'list_image'), product, :class => "thumbnail") %></div>
			<div class="price"><%= number_to_currency(product.price) %><br></div>
			<div class="cart">
        <div class="row">
          <div class="span3">
            <%= button_to "100%", cart_items_path(:product_id => product, :product_condition => "Working"), :remote => true, :class => "btn btn-small" %>
          </div>
          <div class="span1">
            <%= button_to "50%", cart_items_path(:product_id => product, :product_condition => "Broken"), :remote => true, :class => "btn btn-small" %>
          </div>
        </div>
			</div>
		</div>
		<% end %>
	</div>
	
	<%= paginate @products %>
	
	<p><%= link_to 'Back', brands_path , :class => "btn btn-primary" %></p>


