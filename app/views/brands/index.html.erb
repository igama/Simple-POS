<h1>Listing brands</h1>

<div id="brand_list">

<table>
  <tr>
    <th>Logo</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>

<% @brands.each do |brand| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>"> 
	<td><%= image_tag(brand.logo_url, :class => 'list_image') %></td>
    <td><%= brand.name %></td>
    <td class="list_actions">
		<%= link_to 'Show', brand %><br/>
    	<%= link_to 'Edit', edit_brand_path(brand) %><br/>
    	<%= link_to 'Destroy', brand, confirm: 'Are you sure?', method: :delete %>
	</td>
  </tr>
<% end %>
</table>

<br />

</div>

<%= link_to 'New Brand', new_brand_path %>
