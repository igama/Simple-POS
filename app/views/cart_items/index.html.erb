<h1>Listing cart_items</h1>

<table>
  <tr>
    <th>Cart</th>
    <th>Product</th>
    <th>Product price</th>
    <th>Product condition</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cart_items.each do |cart_item| %>
  <tr>
    <td><%= cart_item.cart_id %></td>
    <td><%= cart_item.product_id %></td>
    <td><%= cart_item.product_price %></td>
    <td><%= cart_item.product_condition %></td>
    <td><%= link_to 'Show', cart_item %></td>
    <td><%= link_to 'Edit', edit_cart_item_path(cart_item) %></td>
    <td><%= link_to 'Destroy', cart_item, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

