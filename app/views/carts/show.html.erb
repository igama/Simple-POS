<p id="notice"><%= notice %></p>

<legend><%= t('cart.cart')%></legend>

<!--- TODO: Edit Cart details ---->

<table class="table table-striped table-condensed">
  <% @cart.cart_items.each do |item| %>
  <tr>
  	<th><%= t('product.quantity') %></th>
  	<th><%= t('product.name') %></th>
  	<th><%= t('product.condition') %></th>
  	<th><%= t('product.price') %></th>
  	<th><%= t('cart.removeLine') %></th>
  </tr>
	<tr>
		<td><%= item.quantity %> &times; </td>
		<td><%= item.product.name %></td>
		<td><%= item.product_condition %></td>
		<td class="item_price"><%= number_to_currency(item.total_price) %></td>
		<td class="delete_item"><%= link_to raw(' <i class="icon-trash"></i>'), item, :method => :delete, :confirm => "Are you sure?" %>
	</tr>
  <% end %>
	<tr class ="total_line">
		<td></td>
		<td></td>
		<td>Total</td>
		<td id="total_price"><%= number_to_currency(@cart.total_price)%></td>
		<td></td>
	</tr>
</table>

<%= button_to t('cart.empty_cart'), @cart, :method => :delete, :confirm => 'Are you sure?', :class => "btn btn-danger" %>


<%= link_to t('main.back'), store_path, :class => "btn btn-primary" %>
