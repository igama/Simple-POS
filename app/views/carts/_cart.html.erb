<h3>Cart</h3>

<table class="no-zebra">
	<%= render(cart.cart_items) %>
	<tr class ="total_line">
		<td></td>
		<td>Total</td>
		<td id="total_price"><%= number_to_currency(cart.total_price)%></td>
		<td></td>
	</tr>
</table>

<%= button_to 'Empty Cart', @cart, :method => :delete, :confirm => 'Are you sure?' %>
<%= link_to raw('<i class="icon-shopping-cart icon-white"></i> Checkout'), new_order_path, :method => :get, :class => "btn btn-success" %>
