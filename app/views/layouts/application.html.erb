<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title><%= App.main[:sitename] %></title>
    <%= csrf_meta_tags %>

    <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->

    <!-- Le styles -->
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <style>
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    </style>

    <!-- Le fav and touch icons -->
    <link href="images/favicon.ico" rel="shortcut icon">
  </head>
  <body>

    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
          <div class="container-fluid">
          <a class="btn btn-navbar" data-target=".nav-collapse" data-toggle="collapse">
            <span class="i-bar"></span>
            <span class="i-bar"></span>
            <span class="i-bar"></span>
          </a>
          <a class="brand" href="/"><%= App.main[:sitename] %></a>
          <div class="container-fluid nav-collapse">
            <ul class="nav">
			<% if user_signed_in? %>
                <li><%= link_to t('.store'), store_url  %></li>
                <li><%= link_to t('.products'), products_url  %></li>
				        <li><%= link_to t('.cart'), @cart %></li>
                <li><%= link_to t('.orders'), orders_url  %></li>
			<% else %>
				<li></li>
			<% end %>
            </ul>
			<ul class="nav pull-right">
			<%if user_signed_in? %>
        <li class="dropdown">
           <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.email %><b class="caret"></b>
            <ul class="dropdown-menu">
              <li><%= link_to t('.orders'), orders_url  %></li>
              <li><%= link_to t('.UserAccount'), employee_url(current_user.id) %></li>
            </ul>
        </li>
				<li><%= render 'devise/menu/login_items' %></li>
			<% else %>
				<%= render 'devise/menu/login_items'%>
			<% end %>
			</ul>
		  </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container-fluid">
       <div class="row-fluid">
        <div class="span3">
		 <% if @cart %>
	      <div class="well sidebar-nav">
			<div id="cart">
				<%= render @cart %>
			</div>
          </div><!--/.well -->
		  <% end %>
		  <% if @brands %>
          <div class="well sidebar-nav">
            <ul class="nav nav-list">
              <li class="nav-header">Brands</li>
				<% @brands.each do |brand| %>
				<li> <%= link_to brand.name, brand %></li>
				<% end %>
            </ul>
          </div><!--/.well -->
		<% end %>
        </div><!--/span-->
        <div class="span9">
          <% [:notice, :error, :alert].each do |level| %>
            <% unless flash[level].blank? %>
              <div data-alert="alert" class="alert alert-<%= flash_class(level) %> fade in">
                <a class="close" data-dismiss="alert" href="#">&times;</a>
                <%= content_tag :p, flash[level] %>
              </div>
            <% end %>
          <% end %>

          <%= yield %>

        </div>
      </div><!--/row-->
      <hr>
      <footer>
        <p>&copy; <%= App.main[:companyname] %> </p>
      </footer>

    </div> <!-- /container -->

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <%= javascript_include_tag "application" %>

  </body>
</html>
